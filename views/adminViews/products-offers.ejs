<!-- offer adding modal  -->

<% for(let i=0; i<product.length; i++) { %>
  <div class="modal fade" id="applyOfferModal<%= product[i]._id %>" tabindex="-1" aria-labelledby="applyOfferModalLabel<%= product[i]._id %>" aria-hidden="true">
      <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-header">
                  <h5 class="modal-title" id="applyOfferModalLabel<%= product[i]._id %>">Apply Offer</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                  <!-- Add your offer form fields here -->
                  <label for="offerInput">Offer Percentage:</label>
                  <input type="text" class="form-control" id="offerInput<%= product[i]._id %>" placeholder="Enter offer percentage">
              </div>
              <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                  <button type="button" class="btn btn-primary" onclick="submitOffer('<%= product[i]._id %>')">Apply Offer</button>
              </div>
          </div>
      </div>
  </div>

    <!-- Remove Offer Confirmation Modal -->
    <div class="modal fade" id="removeOfferModal<%= product[i]._id %>" tabindex="-1" aria-labelledby="removeOfferModalLabel<%= product[i]._id %>" aria-hidden="true">
      <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-header">
                  <h5 class="modal-title" id="removeOfferModalLabel<%= product[i]._id %>">Remove Offer</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                  Are you sure you want to remove the offer for <%= product[i].productName %>?
              </div>
              <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                  <button type="button" class="btn btn-danger" onclick="removeOffer('<%= product[i]._id %>')">Remove Offer</button>
              </div>
          </div>
      </div>
  </div>
<%}%>

