            </select>
          </div>
        </div>
      </header>
      <!-- card-header end// -->
      <div class="card-body">
        <div
          class="row gx-3 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 row-cols-xxl-5"
        >
          <% for( let index = 0; index < product.length; index++ ) { %>

          <div id="<%= product[index]._id %>" class="col">
            <div class="card card-product-grid">
              <a href="#" class="img-wrap">
                <img
                  src="/public/assets/uploads/<%= product[index].image[0].filename %>"
                  alt="Product Image"
                />
              </a>
              <div class="info-wrap">
                <a href="#" class="title text-truncate"
                  ><%= product[index].productName %></a
                >
                <div id="salePrice<%= product[index]._id %>" class="price mb-2">
                  <% if (product[index].salePrice === product[index].regularPrice) { %>
                     
                    <span>₹<%= product[index].salePrice.toLocaleString() %></span>
                    <% } else { %>
                      <span>₹<%= product[index].salePrice.toLocaleString() %></span>
                        <span class="oldPrice">₹<%= product[index].regularPrice.toLocaleString() %></span></p>
                  <% } %>
                </div>
                <!-- price.// -->
                <% if (product[index].productOffer === 0) { %>
                 
                  <a href="#" id="offerButton" class="btn btn-sm font-sm rounded btn-brand w-100 mt-1" data-bs-toggle="modal" data-bs-target="#applyOfferModal<%= product[index]._id %>">
                    Apply Offer
                  </a>
                  <% } else { %>
                    <a href="#" id="offerButton" class="btn btn-sm font-sm rounded btn-brand w-100 mt-1" data-bs-toggle="modal" data-bs-target="#removeOfferModal<%= product[index]._id %>">
                      Remove Offer
                    </a>
                <% } %>
                 
              </div>
            </div>
            <!-- card-product  end// -->
          </div>
          <!-- col.// -->

          <% } %>
        </div>
        <!-- row.// -->
