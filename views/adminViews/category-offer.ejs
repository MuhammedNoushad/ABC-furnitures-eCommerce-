      </header>
      <div  class="card-body">
          <div class="table-responsive">
              <div class="table-responsive">
                  <table class="table align-middle table-nowrap mb-0">
                      <thead class="table-light">
                        <tr>
                          <th class="align-middle" scope="col">Category Name</th>
                          <th class="align-middle" scope="col">Date Created</th>
                          <th class="align-middle" scope="col">Apply Offer</th>
                        </tr>
                      </thead>
                      <tbody id="categoryTable">
                        <% if (category.length > 0) { %>
                          <% for (let i = 0; i < category.length; i++) { %>
                            <tr id="category-<%= category[i]._id %>">
                              <td><%= category[i].categoryName %></td>
                              <td><%= category[i].createdOn %></td>
                              <td>
                                <% if (category[i].categoryOffer) { %>
                                  <a href="#" id="offerButton"  data-bs-toggle="modal" data-bs-target="#removeOfferModal<%= category[i]._id %>">
                                    <i class="fa-solid fa-eraser" style="color: #088178;"></i>Remove offer
                                  </a>
                                  <% } else { %>
                                   
                                    <a href="#" id="offerButton"  data-bs-toggle="modal" data-bs-target="#applyOfferModal<%= category[i]._id %>">
                                      <i class="fa-solid fa-tags"></i>Apply Offer
                                    </a>
                                <% } %>
                              </td>
                            </tr>
                          <% } %>
                        <% } %>
                      </tbody>
                    </table>
                    
              </div>
          </div> <!-- table-responsive end// -->
      </div>
  </div>
 
