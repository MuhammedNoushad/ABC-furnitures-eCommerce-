  <section class="content-main">
    <div class="content-header">
      <div>
        <h2 class="content-title card-title">Banner Management</h2>
        <p>
          Manage banners easily. Add, update, remove. See details, upload
          images, track stock, analyze. Simplify your work. .
        </p>
      </div>
      <div>
        <a
          href="/admin/products/add-new-banner"
          class="btn btn-primary btn-sm rounded"
          >Create new</a
        >
      </div>
    </div>
    <div id="products" class="card mb-4">
      <header class="card-header">
        <div class="row gx-3">
          <div class="col-lg-4 col-md-6 me-auto">
            <input type="text" placeholder="Search..." class="form-control" />
          </div>
          <div class="col-lg-2 col-6 col-md-3">
            <select class="form-select" onchange="window.location.href=this.value">
              <option >Category</option>
              <option value="/admin/products/product-management">All</option>
              <% category.forEach(category => { %>
                <option value="/admin/products/product-management?id=<%= category._id %>"><%= category.categoryName %></option>
              <% }) %>
            </select>
            
          </div>
          <div class="col-lg-2 col-6 col-md-3">
            <select class="form-select">
              <option>Latest added</option>
              <option>Cheap first</option>
              <option>Most viewed</option>
            </select>
          </div>
        </div>
      </header>
      <!-- card-header end// -->
      <div class="card-body">
        <div
          class="row gx-3 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 row-cols-xxl-5"
        >
        <% if (banner.length > 0) { %>
          <% for( let i = 0; i < banner.length; i++ ) { %>

          <div id="<%= banner[i]._id %>" class="col">
            <div class="card h-100 card-product-grid">
              <a href="#" class="img-wrap">
                <img
                style="max-height: 100px; object-fit: cover;"
                class="product-image"
                  src="/public/assets/uploads/<%= banner[i].imageUrl[0].filename %>"
                  alt="Product Image"
                />
              </a>
              <div class="info-wrap">
                <a href="#" class="title text-truncate"
                  ><%= banner[i].title %></a
                >
                <a
                  href="/admin/products/edit-banner?id=<%=banner[i]._id %>"
                  class="btn btn-sm font-sm rounded btn-brand"
                >
                  <i class="material-icons md-edit"></i> Edit
                </a>

                <a href="#" onclick="confirmDeleteBanner('<%= banner[i]._id %>')">
                  <i class="fa-solid fa-trash"></i> Delete
                </a>
              </div>
            </div>
            <!-- card-product  end// -->
          </div>
          <!-- col.// -->

          <% } %>
          <% } else { %>
            <div class="col text-center">
                <p>No banners available.</p>
            </div>
        <% } %>

        </div>
        <!-- row.// -->
      </div>
      <!-- card-body end// -->
    </div>
    <!-- card end// -->

     


