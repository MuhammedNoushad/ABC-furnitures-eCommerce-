<div class="profile ml-100">
 <div class="container ">

    <div class="container mt-5">
        <div class="card mx-auto " >
          <div class="card-header bg-warning text-white">
            Edit username
          </div>
          <div class="card-body">
            <form method="post" action="/update-username" onsubmit="return usernameValidation()">
              <div class="form-group">
                <label for="username">Username:</label>
              <p class="text-danger" id="usernameError"></p>

                <input type="text" class="form-control" name="username" id="editUserName" placeholder="Enter your username" value="<%= user.username %>" required>
              </div>
              <button  class="btn btn-warning"> Update username</button>
                   <div class="mt-3">

                       <a href="/user-profile">back to profile</a>
                   </div>
            </form>
          </div>
        </div>
      </div>
 </div>
