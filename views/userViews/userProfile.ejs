<%- include("../layouts/users/header") %>


<div class="shop_sidebar_area">
  <!-- ##### Single Widget ##### -->
  <div class="widget catagory mb-50">
    <!-- Widget Title -->
    <h2 class="widget-title mb-100 text-warning"><%= user.username %></h2>

    <!--  Catagories  -->
    <div class="catagories-menu">
      <ul>
        <li class=" mt-30 active"><a href="/user-profile">Profile</a></li>
        <li class=" mt-30"><a href="/user-orders">My orders</a></li>
        <li class=" mt-30"><a href="/user-address">Manage address</a></li>
        <li class=" mt-30"><a href="/user-wishlist">My wishlist</a></li>
        <li class=" mt-30"><a href="/user-wallet">My wallet</a></li>
        
      </ul>
    </div>
  </div>
</div>
<div class="profile ml-100">
 <div class="container">

  <h3 class="text-warning profile-head">Manage your Profiles</h3>
  <div class="card mt-50">
    <div class="card-header text-warning profile-sub-head"> Account holder</div>
    <div class="card-body d-flex justify-content-between body">
  <%= user.username %>
      
      <span><a href="/edit-user-name?id=<%= user._id %>"><i class="fa-solid fa-pencil"></i></a></span>
    </div>
  </div>
  <div class="card mt-50">
    <div class="card-header text-warning profile-sub-head"> Mobile number</div>
    <div class="card-body d-flex justify-content-between body">
      <%= user.mobile %>
      <span><a href="/edit-user-mobile?id=<%= user._id %>"><i class="fa-solid fa-pencil"></i></a></span>
    </div>
  </div>

  <div class="card mt-50">
    <div class="card-header text-warning profile-sub-head"> Change password</div>
    <div class="card-body d-flex justify-content-between body">
      * * * * * *
      <span><a href="/edit-password?id=<%= user._id %>"><i class="fa-solid fa-pencil"></i></a></span>
    </div>
  </div>

  <div class="container mt-4 ">
    <a id="deleteButton" href="/logout" class="btn btn-warning">Log out</a>
  </div>
 </div>
</div>


<%- include("../layouts/users/footer") %>
