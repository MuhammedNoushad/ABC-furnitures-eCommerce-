<%- include("../layouts/users/header") %>

<div class="products-catagories-area">
  <div class="amado-pro-catagory">
    <div class="wrap-login100">
      <form
        action="/login"
        method="post"
        class="login100-form validate-form p-l-55 p-r-55 p-t-178"
      >
        <span class="login100-form-title"> Sign In </span>

        <% if (typeof message !== "undefined" ) { %>
        <div id="message" class="text-center error m-b-16"><%= message %></div>
        <% } %>

        <div
          class="wrap-input100 validate-input m-b-16"
          data-validate="Please enter username"
        >
          <input
            class="input100"
            type="text"
            name="username"
            placeholder="Username"
          />
          <span class="focus-input100"></span>
        </div>

        <div
          class="wrap-input100 validate-input"
          data-validate="Please enter password"
        >
          <input
            class="input100"
            type="password"
            name="pass"
            placeholder="Password"
            id="password"
          />
          <i class="bi bi-eye-slash" id="togglePassword"></i>
          <span class="focus-input100"></span>
        </div>

        <div class="text-right p-t-13 p-b-23">
          <span class="txt1"> Forgot </span>

          <a href="/forgot-password" class="txt2"> Password? </a>
        </div>

        <div class="container-login100-form-btn">
          <button type="submit" class="login100-form-btn">Sign In</button>
        </div>

        <div class="flex-col-c p-t-30 p-b-20">
          <span class="txt1 p-b-9"> Donâ€™t have an account? </span>

          <a href="/user-registration" class="txt3"> Sign up now </a>
        </div>
      </form>
    </div>
  </div>
</div>
